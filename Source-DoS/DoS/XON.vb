        Console.Title = "XON PROJECT"

        Console.Write("URL: ")
        Dim url As String = Console.ReadLine()

        Console.Write("TIME: ")
        Dim totalTime As Integer
        While Not Integer.TryParse(Console.ReadLine(), totalTime) OrElse totalTime <= 0
            Console.Clear()
            Console.Write("TIME: ")
        End While

        Console.Write("THREADS: ")
        Dim threadCount As Integer
        While Not Integer.TryParse(Console.ReadLine(), threadCount) OrElse threadCount <= 0
            Console.Clear()
            Console.Write("THREADS: ")
        End While

        Dim tasks As New List(Of Task)
        For i As Integer = 1 To threadCount
            tasks.Add(Task.Run(Function() SendRequestsAsync(url, totalTime)))
        Next

        Task.WaitAll(tasks.ToArray())
    End Sub

